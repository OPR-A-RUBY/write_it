<!-- showusers.erb -->

<p> filename: showusers.erb </p>

<table class="table table-striped">

  <thead>
       <tr>
	    <th>Username</th>
	    <th>Phone   </th>
	    <th>Data    </th>
	    <th>Barber  </th>
	    <th>Color   </th>
	</tr>
  </thead>
   
  <tbody>
    
      <% @results.each do |row| %>
	<tr>
	    <td><%= row['username'] %></td>
	    <td><%= row['phone']    %></td>
	    <td><%= row['datas']    %></td>
	    <td><%= row['barber']   %></td>
	    <td><%= row['color']    %></td>
	</tr>
      <% end %>

  </tbody>
  
</table>
